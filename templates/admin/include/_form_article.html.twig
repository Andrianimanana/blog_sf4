{{ form_start(form, {'attr':{'class':'row'}}) }}
	<div class="input-field col s12 m12 l12">
		{{ form_widget(form.picture) }}
	</div>
	{% if(article.picture is not null) %}
		<div class="input-field col s12 m6 l6">
			<img src="{{ asset('/upload/' ~ article.getPicture()) }}" style="width: 100%;">
		</div>
	{% endif %}
	<div class="input-field col s12 m6 l6">
		{{ form_widget(form.title, {'attr' : {'placeholder':'Titre de l\' article'}}) }}
		{{ form_label(form.title, 'Titre article') }}
		<span class="error">{{ form_errors(form.title) }}</span>
	</div>
	<div class="input-field col s12 m6 l6">
		{{ form_widget(form.categories, {'class': ''}) }}
		{{ form_label(form.categories, 'Cat√©gories') }}
	</div>
	<div class="input-field col s12 m12 l12">
		{{ form_widget(form.content, {'attr':{'class':'materialize-textarea', 'placeholder' : 'Contenu de l\' article'}}) }}
		{{ form_label(form.content, 'Contenu de l\' article') }}
	</div>
	<div class="input-field col s12 m12 l12">
		<p>
			<label>
				{{ form_widget(form.isPublised, {'class':'filled-in','label':'Publier'}) }}
				<span>{{ form_label(form.isPublised, 'Publier') }}</span>
			</label>
		</p>
	</div>
	<div class="input-field col s12 m12 l12">
		<input type="submit" name="" value="Enregistrer" class="btn btn-primary btn-large">
	</div>
{{ form_end(form) }}