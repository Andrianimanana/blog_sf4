{{ form_start(form, {'attr':{'class':'col-md-10 m-auto'}}) }}
<div class="row">
	<div class="col-md-3">
		<div class="form-group">
		{% if(article.picture is not null) %}
			<img src="{{ asset('/upload/' ~ article.getPicture()) }}" class="img-fluid">
		{% else %}
			<img src="{{ asset('/images/img-default.jpg') }}" class="img-fluid">
		{% endif %}
		</div>
		<div class="form-group">
			{{ form_widget(form.picture) }}
		</div>
	</div>
	<div class=" col-md-9">
		<div class="form-group">
			{{ form_label(form.title, 'Titre article') }}
			{{ form_widget(form.title, {'attr' : {'placeholder':'Titre de l\' article','class':'form-control'}}) }}
			<span class="error">{{ form_errors(form.title) }}</span>
		</div>
		<div class="form-group">
			{{ form_label(form.categories, 'Cat√©gories') }}
			{{ form_widget(form.categories, {'attr':{'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.content, 'Contenu de l\' article') }}
			{{ form_widget(form.content, {'attr':{'class':'form-control', 'placeholder' : 'Contenu de l\' article', 'class':'form-control'}}) }}
		</div>
		<div class="form-group">
			<p>
				<label>
					{{ form_widget(form.isPublised, {'class':'filled-in','label':'Publier'}) }}
					<span>{{ form_label(form.isPublised, 'Publier') }}</span>
				</label>
			</p>
		</div>
		<div class="form-group">
			<input type="submit" name="" value="Enregistrer" class="btn btn-primary btn-large">
		</div>
	</div>
</div>		
{{ form_end(form) }}