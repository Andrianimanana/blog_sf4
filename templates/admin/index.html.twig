{% extends "base.html.twig" %}

{% block title %}Admin. | {{ parent() }}{% endblock %}

{% block body %}
<div class="admin-page">
	<div class="container">
		<!-- message error or success -->
		{#% include 'blog/include/_message.html.twig' %#}

		<div class="row">
			<div class="col-md-12">
				{% if is_granted('ROLE_ADMIN') %}
					<a id="_add_article" alt="Ajouter une article" title="Ajouter une article" href="{{ path('add_article') }}" class="btn btn-lg" style="float: right"><i class="fas fa-plus-circle"></i></a>
				{% endif %}
				<h5>Articles</h5>
				<table class="table">
					<tr class="thead-light">
						<th>#</th>
						<th>Titre</th>
						<th>Publier</th>
						<th>Date de publication</th>
						<th>Date de modification</th>
						<th>Actions</th>
					</tr>
					{% set i = 1 %}
					{% for article in articles %}
					<tr> 
						<td>{{ i }}</td>
						<td><a href="{{ path('show_article',{'id':article.id})}}" target="_blank">{{ article.title }}</a></td>
						<td>
							<span class="badge {{ article.isPublised ? 'blue' : 'red' }}">
								{{ article.isPublised ? 'oui' : 'non' }}
							</span>
						</td>
						<td>{{ article.isPublised ? article.publicationDate|date('d/m/Y') : '-' }}</td>
						<td>{{ article.lastUpdateDate|date('d/m/Y') }}</td>
						<td>
							{% if is_granted('ROLE_ADMIN') %}
								<a href="{{ path('edit_article', {'id': article.id}) }}" class="text-primary px-1"><i class="fas fa-pen"></i></a>
								<a href="{{ path('remove_article', {'id': article.id}) }}" class="text-danger px-1"><i class="fas fa-trash-alt"></i></a>
							{% else %}
								<a href="#"><i class="material-icons blue-text">-</i></a>
								<a href="#"><i class="material-icons red-text">-</i></a>	
							{% endif %}
						</td>
					</tr>
					{% set i = i+1 %}
					{% endfor %}
				</table>
				{# paginator #}
				<div class="row justify-content-center">
					{{ knp_pagination_render(articles) }}
				</div>	
			</div>
		</div>

		<div class="row">
			<div class="col s12 m-t-30">
				<h5>Utilisateurs</h5>
				<table class="table">
					<tr class="thead-light">
						<th>#</th>
						<th>Adresse email</th>
						<th>Username</th>
						<th>Roles</th>
						<th>Actions</th>
					</tr>
					{% set i = 1 %}
					{% for user in users %}
					<tr>
						<td>{{ i }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.nameuser }}</td>
						<td>
							<span class="badge blue">
								admin.
							</span>
						</td>
						<td>
							<a href="#"><i class="fas fa-trash-alt text-danger"></i></a>
						</td>
					</tr>
					{% set i = i+1 %}
					{% endfor %}
				</table>
			</div>
		</div>
	</div>
</div>
{% endblock %}