<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>{% block title %}Blog{% endblock %}</title> 
	<meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
	{% block stylesheets %} 
	<link rel="stylesheet" type="text/css" href="{{ asset('css/icon.css') }}">
	<link rel="stylesheet" type="text/css" href="{{ asset('css/materialize.min.css') }}">
	<link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
	{% endblock %}
</head>
<body>
<!-- Dropdown Structure -->
<ul id="dropdown1" class="dropdown-content">
	<li><a href="#!">sub menu</a></li> 
	<li class="divider"></li>
	<li>			
		{% if not app.user %}
			<a href="{{ path('app_login') }}"><i class="material-icons">login</i>Se connecter</a>
		{% else %}
			<a href="{{ path('app_logout') }}"><i class="material-icons">logout</i>Se DÃ©connecter</a>
		{% endif %}  
	</li>
</ul>
<nav>
	<div class="nav-wrapper">
		<a href="#" class="brand-logo"><i class="material-icons">menu</i>Blog ~ sf4</a>
		<ul class="right hide-on-med-and-down">
			<li>
				{% if app.user %}
					<a class="col s8 btn-flat dropdown-button waves-effect waves-light white-text" href="#" data-activates="profile-dropdown">{{app.user.nameuser}}<i class="mdi-navigation-arrow-drop-down right"></i></a>
				{% endif %}
			</li>
			<li><a href="badges.html">Components</a></li>
			<!-- Dropdown Trigger -->
			<li><a class="dropdown-trigger" href="#!" data-target="dropdown1">Dropdown<i class="material-icons right">arrow_drop_down</i></a></li>
		</ul>
	</div>
</nav>  
<!-- message  success || error || infos-->
{% include 'blog/include/_message.html.twig' %}

{% block body %}{% endblock %}
	{% block javascripts %}
		<script src="{{ asset('js/jquery.min.js') }}"></script>
		<script src="{{ asset('js/materialize.min.js') }}"></script>
		<script src="{{ asset('js/scripts.js') }}"></script>
	{% endblock %}
</body>
</html>
