<h1 class="card-title text-center pb-4">Inscription</h1>
{{ form_start(registrationForm, {'attr': {'action': path('app_register'), 'class': 'row col-md-6 m-auto'}}) }} 
    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
        </div>
        {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Adresse email', 'class':'form-control'}}) }}
        <span class="error">{{ form_errors(registrationForm.email) }}</span>
    </div> 

    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
        </div>
        {{ form_widget(registrationForm.nameuser, {'attr': {'placeholder': 'Nom d\'utilisateur', 'class':'form-control'}}) }}
        <span class="error">{{ form_errors(registrationForm.nameuser) }}</span>
    </div>
    
    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
        {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe','class':'form-control'}}) }}
        <span class="error">{{ form_errors(registrationForm.plainPassword) }}</span>
    </div>
    <div class="form-group m-auto">
        <input type="submit" class="btn btn-primary btn-block" value="S'inscrire">
    </div>
{{ form_end(registrationForm) }}