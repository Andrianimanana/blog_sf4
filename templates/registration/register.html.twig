{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div id="register">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container center">
        <article class="col-md-6 card-body mx-auto card bg-light">
            <h1 class="card-title text-center pb-4">Inscription</h1>
            {{ form_start(registrationForm, {'attr': {'action': path('app_register'), 'class': 'row'}}) }} 
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                    </div>
                    {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Adresse email', 'class':'form-control'}}) }}
                    <span class="error">{{ form_errors(registrationForm.email) }}</span>
                </div> 

                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                    </div>
                    {{ form_widget(registrationForm.nameuser, {'attr': {'placeholder': 'Nom d\'utilisateur', 'class':'form-control'}}) }}
                    <span class="error">{{ form_errors(registrationForm.nameuser) }}</span>
                </div>
                
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe','class':'form-control'}}) }}
                    <span class="error">{{ form_errors(registrationForm.plainPassword) }}</span>
                </div>
                <div class="form-group m-auto">
                    <input type="submit" class="btn btn-primary btn-block" value="S'inscrire">
                </div>
            {{ form_end(registrationForm) }}
        </article>    
    </div>
</div>
{% endblock %}